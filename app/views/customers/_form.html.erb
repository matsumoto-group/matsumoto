<section class="page">                                                                   
  <h2 class="page__title">会員情報編集</h2>
  <%= form_for(customer) do |c| %>
               
    <!-- 姓（漢字） -->
    <div class="form__row">
      <label class="form__label">姓</label>
      <%= c.text_field :first_name, autofocus: true, class:"form__field" %>
      <% if alert %>
        <p class="form__alert alert alert-error"><%= alert %></p>
      <% else %>
        <p class="form__condition">*注意書きが入ります。</p>
      <% end %>
    </div>  
               
    <!-- 名（漢字） -->
    <div class="form__row">
      <label class="form__label">名</label>
      <%= c.text_field :last_name, autofocus: true, class:"form__field" %>
      <% if alert %>
        <p class="form__alert alert alert-error"><%= alert %></p>
      <% else %>
        <p class="form__condition">*注意書きが入ります。</p>
      <% end %>
    </div>  
               
    <!-- セイ -->
    <div class="form__row">
      <label class="form__label">セイ</label>
      <%= c.text_field :first_name_kana, autofocus: true, class:"form__field" %>
      <% if alert %>
        <p class="form__alert alert alert-error"><%= alert %></p>
      <% else %>
        <p class="form__condition">*注意書きが入ります。</p>
      <% end %>
    </div>  
               
    <!-- メイ -->
    <div class="form__row">
      <label class="form__label">メイ</label>
      <%= c.text_field :last_name_kana, autofocus: true, class:"form__field" %>
      <% if alert %>
        <p class="form__alert alert alert-error"><%= alert %></p>
      <% else %>
        <p class="form__condition">*注意書きが入ります。</p>
      <% end %>
    </div>  

    <!-- メールアドレス -->
    <div class="form__row">
      <label class="form__label">メールアドレス</label>
      <%= c.email_field :email, autofocus: true, class:"form__field" %>
      <% if alert %>
        <p class="form__alert alert alert-error"><%= alert %></p>
      <% else %>
        <p class="form__condition">*注意書きが入ります。</p>
      <% end %>
    </div>

    <!-- phone -->
    <div class="form__row">
      <label class="form__label">電話番号</label>
      <%= c.text_field :phone, autofocus: true, class:"form__field" %>
      <% if alert %>
        <p class="form__alert alert alert-error"><%= alert %></p>
      <% else %>
        <p class="form__condition">*注意書きが入ります。</p>
      <% end %>
    </div>

    <!-- 郵便番号 -->
    <div class="form__row">
      <label class="form__label">郵便番号</label>
      <%= c.text_field :postalcode, autofocus: true, class:"form__field" %>
      <% if alert %>
        <p class="form__alert alert alert-error"><%= alert %></p>
      <% else %>
        <p class="form__condition">*注意書きが入ります。</p>
      <% end %>
    </div>

    <!-- 住所 -->
    <div class="form__row">
      <label class="form__label">住所</label>
      <%= c.text_field :adress, autofocus: true, class:"form__field" %>
      <% if alert %>
        <p class="form__alert alert alert-error"><%= alert %></p>
      <% else %>
        <p class="form__condition">*注意書きが入ります。</p>
      <% end %>
    </div>
           
    <!-- 変更ボタン -->
    <%= c.submit "変更完了", class:"btn btn__login" %>
  <% end %>
  
  <!-- カートアルバム数量変更フォーム -->
  <div class="customer__cart nested-fields form__roww">
  <% @cart.each do |cart| %>
    <%= form_for cart, url: album_cart_albums_path(cart.id) do |f| %>
      <%= f.text_field :order_quantity, class:"form__field" %>
      <%= f.submit ' 完了', class:"btn__login btn" %>
    <% end %>
  <% end %>
  </div>
</div>
</section>                                                                               
