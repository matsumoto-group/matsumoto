
<section class="page">
<h2 class="page__title">新規商品追加</h2>
<div class="page__content">
<%= form_for(@post_album) do |f| %>
  <div class="form__row">
    <%= f.label :album_name, class:"form__label" %>
    <%= f.text_field :album_name, autofocus: true,  class:"form__field" %>
    <% if alert %>
      <p class="form__alert alert alert-error"><%= alert %></p>
    <% else %>
      <p class="form__condition">*注意書きが入ります。</p>
    <% end %>
  </div>

  <div class="form__row">
    <%= f.label :jacket_image, class:"form__label" %>
    <%= f.attachment_field :jacket_image %>
    <% if alert %>
      <p class="form__alert alert alert-error"><%= alert %></p>
    <% else %>
      <p class="form__condition">*注意書きが入ります。</p>
    <% end %>
  </div>

  <div class="form__row">
    <%= f.label :label, class:"form__label" %>
    <%= f.text_field :label, class:"form__field" %>
    <% if alert %>
      <p class="form__alert alert alert-error"><%= alert %></p>
    <% else %>
      <p class="form__condition">*注意書きが入ります。</p>
    <% end %>
  </div>

  <div class="form__row">
    <%= f.label :price, class:"form__label" %>
    <%= f.number_field :price, class:"form__field" %>
    <% if alert %>
      <p class="form__alert alert alert-error"><%= alert %></p>
    <% else %>
      <p class="form__condition">*注意書きが入ります。</p>
    <% end %>
  </div>

  <div class="form__row">
    <%= f.label :stock_quantity, class:"form__label" %>
    <%= f.number_field :stock_quantity, class:"form__field" %>
    <% if alert %>
      <p class="form__alert alert alert-error"><%= alert %></p>
    <% else %>
      <p class="form__condition">*注意書きが入ります。</p>
    <% end %>
  </div>

  <div class="form__row">
    <%= f.label :genre, class:"form__label" %>
    <%= f.text_field :genre, class:"form__field" %>
    <% if alert %>
      <p class="form__alert alert alert-error"><%= alert %></p>
    <% else %>
      <p class="form__condition">*注意書きが入ります。</p>
    <% end %>
  </div>

  <div class="form__row">
    <%= f.label :sales_status, class:"form__label" %>
    <%= f.text_field :sales_status, class:"form__field" %>
    <% if alert %>
      <p class="form__alert alert alert-error"><%= alert %></p>
    <% else %>
      <p class="form__condition">*注意書きが入ります。</p>
    <% end %>
  </div>

  



  

  

  <div class="actions">
    <%= f.submit "追加", class:"btn btn__login" %>
  </div>
<% end %>

</section>
